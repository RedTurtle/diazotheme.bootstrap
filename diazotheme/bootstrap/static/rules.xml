<?xml version="1.0" encoding="UTF-8"?>
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    >

    <xsl:output indent="yes"/>
    <xsl:strip-space elements="*"/>
    <!-- First things first: select the html to use as default -->
    <theme href="base.html" css:if-content="#visual-portal-wrapper"/>

    <!-- then add an exception for dialog boxes -->
    <theme href="dialog.html" css:if-content="#content.dialog-wrapper"/>

    <!-- this select the layout between fixed and fluid based on the
         theme variable 'layout' in manifest.cfg 
    -->
    <xi:include href="config.xml"/>

    <!-- this drop empty tags generated by TinyMCE -->
    <drop content="p[not(*) and (not(normalize-space()) or text() = '&#160;')]"/>

    <!-- this pulls in the title tag -->
    <replace theme="/html/head/title" content="/html/head/title" />
    

    <!--  drop this IE compatibility tag...why? no idea... -->
    <drop css:content="meta[http-equiv='X-UA-Compatible']"/>

    <rules css:if-content="#content.dialog-wrapper">
        <prepend theme="/html/head" content="/html/head/base"/>
        <after css:theme="meta[http-equiv='X-UA-Compatible']" 
            content="/html/head/link | /html/head/style | /html/head/script | /html/head/meta" />
        <replace theme="/html/body" content="/html/body"/>
    </rules>

    <copy attributes="class dir" css:content="body" css:theme="body"/>

    <!-- actually this is never applied 'cause we applied the theme
        only for #visual-portal-wrapper or #content.dialog-wrapper-->
    <rules css:if-content=".presentation">
         <replace css:theme-children="section">
            <xsl:for-each css:select=".slide">
                <article><xsl:attribute name="class">
                        <xsl:if test="position()=1">
                            slide-firstpage
                        </xsl:if>
                    </xsl:attribute>
                    <xsl:copy-of select="current()"/>
                </article>
            </xsl:for-each>
         </replace>
    </rules>

    <rules css:if-content="#visual-portal-wrapper">

        <!-- import the base tag -->
        <prepend theme="/html/head" content="/html/head/base"/>

        <!-- replace the site title -->
        <replace theme="//*[@id='logo']/h1" content="//*[@id='content']/h1"/>

        <!-- let's import all css, js and metas-->
        <after css:theme="meta[http-equiv='X-UA-Compatible']" 
            content="/html/head/link | /html/head/style | /html/head/meta" />
        <append css:theme="#site-scripts" content="/html/head/script" />

        <!-- these 2 rules are for contentwellportlet compatibility...I guess -->
        <append css:theme="#header">
            <xsl:if css:test=".AbovePortletManager1">
                <div id="portletHeader">
                    <xsl:for-each css:select=".AbovePortletManager1 .portletWrapper">
                        <xi:include href="portlet-rules.xml"/>
                    </xsl:for-each>
                </div>
            </xsl:if>
        </append>
        <prepend css:theme="#content-columns">
            
            <xsl:if css:test=".AbovePortletManager2">
                <div class="row-fluid">
                    <div class="span12">
                        <div id="portletHeader">
                            <xsl:for-each css:select=".AbovePortletManager2 .portletWrapper">
                                <xi:include href="portlet-rules.xml"/>
                            </xsl:for-each>
                        </div>
                    </div>
                </div>
            </xsl:if>
        </prepend>

        <!-- this copy the action of the search box --> 
        <copy attributes="action"
            css:theme="#topsearchbox"
            css:content="#portal-searchbox form"/>
        <copy attributes="placeholder"
            css:theme="#topsearchbox .search-query"
            css:content="#portal-searchbox #searchGadget"/>
        <!--<append css:theme="#topsearchbox" css:content="#portal-searchbox #LSResult"/>-->
        <!--<xsl:template match="div/@class[contains(., 'LSResult')]">
            <xsl:attribute name="class"><xsl:value-of select="str:replace(., 'modal', '')" /></xsl:attribute>
        </xsl:template> -->
        <append css:theme="#topsearchbox">
                <div id="LSResult" class="LSResult modal" style="display:none">
                    <xsl:copy-of select="//*[@id='LSResult']/*" />
                </div>
        </append>
        <append css:theme="#topsearchbox" css:content="#portal-searchbox .searchButton" />
        <!-- <append css:theme="#topsearchbox" css:content="#portal-searchbox .searchSection" /> -->

        <replace css:theme="#center-column">
          <div id="center-column"><xsl:attribute name="class">
                  <xsl:if test='contains(//*[@id="portal-column-content"]/@class,"width-3:4") and contains(//*[@id="portal-column-content"]/@class,"position-0")'
                    >twocolumns span10</xsl:if>
                  <xsl:if test='contains(//*[@id="portal-column-content"]/@class,"width-3:4") and contains(//*[@id="portal-column-content"]/@class,"position-1:4")'
                    >twocolumns span10 offset2</xsl:if>
                  <xsl:if test='contains(//*[@id="portal-column-content"]/@class,"width-1:2")'
                    >threecolumns span8 offset2</xsl:if>
                  <xsl:if test='contains(//*[@id="portal-column-content"]/@class,"width-full")'
                    >nocolumns span12</xsl:if>
              </xsl:attribute>
              <xsl:if css:test=".AbovePortletManager3">
                  <div id="portletAboveContent">
                      <xsl:for-each css:select=".AbovePortletManager3 .portletWrapper">
                          <xi:include href="portlet-rules.xml"/>
                      </xsl:for-each>
                  </div>
              </xsl:if>
              <div id="viewlet-above-content">
                  <xsl:for-each css:select="#viewlet-above-content > *">
                      <xsl:if test="@id">
                      <xsl:if test="@id!='portlets-above' and
                                    @id!='portal-breadcrumbs'">
                          <xsl:copy-of select="current()"/>
                      </xsl:if>
                      </xsl:if>
                      <xsl:if test="not(@id)">
                          <xsl:copy-of select="current()"/>
                      </xsl:if>
                  </xsl:for-each>
              </div>
              <article>
                  <xsl:copy-of css:select=".portalMessage"/>
                  <div id="action-bar">
                      <ul class="nav nav-tabs">
                      <xsl:for-each css:select="#content-views > li"><xi:include href="navigation-rules.xml"/></xsl:for-each>
                      <xsl:for-each css:select="#contentActionMenus > li">
                          <li class="dropdown pull-right" data-dropdown="dropdown">
                              <a class="dropdown-toggle" href="#"><xsl:attribute name="href">
                                      <xsl:value-of select="dl/dt/a/@href"/>
                                  </xsl:attribute>
                                  <xsl:copy-of select="dl/dt/a/span"/>
                                  <b class="caret"></b>
                              </a>
                              <ul class="dropdown-menu" style="min-width:150px;">
                                  <xsl:for-each css:select=".actionMenuContent > ul > li">
                                      <xsl:copy-of select="current()"/>
                                  </xsl:for-each>
                              </ul>
                          </li>
                      </xsl:for-each>
                      </ul>
                  </div>
        
                  <xsl:apply-templates css:select="#content"/>
              </article>
              <div class="visualClear"/>
              <div id="viewlet-below-content">
                  <xsl:for-each css:select="#viewlet-below-content > *">
                      <xsl:if test="@id">
                      <xsl:if test="@id!='portlets-below'">
                          <xsl:copy-of select="current()"/>
                      </xsl:if>
                      </xsl:if>
                      <xsl:if test="not(@id)">
                          <xsl:copy-of select="current()"/>
                      </xsl:if>
                  </xsl:for-each>
              </div>
          </div>
        </replace>


        <drop css:content="#enable_cookies_message"/>

        <!-- what the hell is a "hero-unit"?? -->
        <drop css:theme=".hero-unit" css:if-not-content=".section-front-page"/>


        <drop css:theme="#left-column" css:if-not-content="#portal-column-one"/>
        <drop css:theme="#right-column" css:if-not-content="#portal-column-two"/>


        <replace css:theme="#logo" css:content="#portal-logo"/>

        <!-- This iters the global nav menu list items.
            For each item, it tests if it's an ul tag.
            If it's not an ul it just copy it (an select the active entry).
            If it's an ul, it turns it into a bootstrap dropdown.
        -->
        <replace css:theme-children="#nav">
            <xsl:for-each css:select="#portal-globalnav > li">
                <xi:include href="navigation-rules.xml"/>
            </xsl:for-each>
        </replace>

        <replace css:theme-children="#personaltool-menu" 
            css:content-children="#portal-personaltools ul"/>
         <replace css:theme-children="#personaltool-menuheader" 
            css:content-children="#portal-personaltools .actionMenuHeader a"/>
        <copy attributes="href" css:theme="#secondary-nav li a"  css:content='#portal-personaltools dt a'/>
        <replace css:theme-children="#secondary-nav" css:if-content="#anon-personalbar">
            <li><xsl:copy-of css:select="#personaltools-login" /></li>
        </replace>

        <copy css:theme=".navbar-fixed-top .brand" css:content="#portal-logo" attributes="href"/>

        <xi:include href="breadcrumbs.xml"/>

        <append css:theme=".footer" css:content-children="#portal-footer-wrapper"/>
<!--        
        <append css:theme=".footer" css:content="#portal-colophon"/>
-->
        <append css:theme=".footer" css:content="div#visual-portal-wrapper > div.row > script"/>

        <append css:theme="#left-column-content"
            css:content="#portletmanager-plone-leftcolumn"/>

        <replace css:theme-children="#left-column-content">
            <div>
                <xsl:for-each css:select="#portal-column-one .portletWrapper">
                    <xi:include href="portlet-rules.xml"/>
                </xsl:for-each>
                <xsl:copy-of css:select="#portal-column-one .managePortletsLink"/>
            </div>
        </replace>
        <rules css:if-content="#portlet-prefs">
            <replace css:theme="#left-column-content" css:content="#portlet-prefs" /> 
        </rules>
        <append css:theme="#right-column-content"
            css:content="#portletmanager-plone-rightcolumn"/>
        <replace css:theme-children="#right-column-content">
            <div>
                <xsl:for-each css:select="#portal-column-two .portletWrapper">
                    <xi:include href="portlet-rules.xml"/>
                </xsl:for-each>
                <xsl:copy-of css:select="#portal-column-two .managePortletsLink"/>
            </div>
        </replace>

        <replace css:theme-children="#portletBelowContentA" css:if-content=".BelowPortletManager1 .portletWrapper">
            <xsl:for-each css:select=".BelowPortletManager1 .portletWrapper">
                <xi:include href="portlet-rules.xml"/>
            </xsl:for-each>
            <div style="display:hidden"></div>
        </replace>
        <drop css:theme="#portletBelowContentA" css:if-not-content=".BelowPortletManager1 .portletWrapper" />

        <replace css:theme-children="#portletBelowContentB" css:if-content=".BelowPortletManager2 .portletWrapper">
            <xsl:for-each css:select=".BelowPortletManager2 .portletWrapper">
                <xi:include href="portlet-rules.xml"/>
            </xsl:for-each>
            <div style="display:hidden"></div>
        </replace>
        <drop css:theme="#portletBelowContentB" css:if-not-content=".BelowPortletManager2 .portletWrapper" />

        <replace css:theme-children="#portletBelowContentC" css:if-content=".BelowPortletManager3 .portletWrapper">
            <xsl:for-each css:select=".BelowPortletManager3 .portletWrapper">
                <xi:include href="portlet-rules.xml"/>
            </xsl:for-each>
            <div style="display:hidden"></div>
        </replace>
        <drop css:theme="#portletBelowContentC" css:if-not-content=".BelowPortletManager3 .portletWrapper" />

        <replace css:theme-children="#portletBelowContentD" css:if-content=".BelowPortletManager4 .portletWrapper">
            <xsl:for-each css:select=".BelowPortletManager4 .portletWrapper">
                <xi:include href="portlet-rules.xml"/>
            </xsl:for-each>
        </replace>
        <drop css:theme="#portletBelowContentD" css:if-not-content=".BelowPortletManager4 .portletWrapper" />

        <replace css:theme-children="#portletBelowContentE" css:if-content=".BelowPortletManager5 .portletWrapper">
            <xsl:for-each css:select=".BelowPortletManager5 .portletWrapper">
                <xi:include href="portlet-rules.xml"/>
            </xsl:for-each>
        </replace>
        <drop css:theme="#portletBelowContentE" css:if-not-content=".BelowPortletManager5 .portletWrapper" />

        <replace css:theme-children="#portletBelowContentF" css:if-content=".BelowPortletManager6 .portletWrapper">
            <xsl:for-each css:select=".BelowPortletManager6 .portletWrapper">
                <xi:include href="portlet-rules.xml"/>
            </xsl:for-each>
        </replace>
        <drop css:theme="#portletBelowContentF" css:if-not-content=".BelowPortletManager6 .portletWrapper" />

        <drop css:theme="#portletBelowContentRow1"
          if-not-content="//*[@id='portlets-below']/div[contains(@class, 'BelowPortletManager1')] or 
                          //*[@id='portlets-below']/div[contains(@class, 'BelowPortletManager2')] or
                          //*[@id='portlets-below']/div[contains(@class, 'BelowPortletManager3')]" />
        <drop css:theme="#portletBelowContentRow2"
          if-not-content="//*[@id='portlets-below']/div[contains(@class, 'BelowPortletManager4')] or 
                          //*[@id='portlets-below']/div[contains(@class, 'BelowPortletManager5')] or
                          //*[@id='portlets-below']/div[contains(@class, 'BelowPortletManager6')]" />

<!--
        <replace css:theme-children="#portletBelowContentManager">
          <xsl:for-each css:select="#viewlet-below-content #portlets-below dl.portlet">
            <xi:include href="portlet-rules.xml"/>
          </xsl:for-each>
        </replace>
-->
        <replace css:theme-children="#portletFooterA">
            <xsl:for-each css:select=".FooterPortletManager1 .portletWrapper">
                <xi:include href="portlet-rules.xml"/>
            </xsl:for-each>
            <div style="display:hidden"></div>
        </replace>

        <replace css:theme-children="#portletFooterB">
            <xsl:for-each css:select=".FooterPortletManager2 .portletWrapper">
                <xi:include href="portlet-rules.xml"/>
            </xsl:for-each>
            <div style="display:hidden"></div>
        </replace>

        <replace css:theme-children="#portletFooterC">
            <xsl:for-each css:select=".FooterPortletManager3 .portletWrapper">
                <xi:include href="portlet-rules.xml"/>
            </xsl:for-each>
            <div style="display:hidden"></div>
        </replace>


        <replace css:theme-children="#portletFooterD">
            <xsl:for-each css:select=".FooterPortletManager4 .portletWrapper">
                <xi:include href="portlet-rules.xml"/>
            </xsl:for-each>
            <div style="display:hidden"></div>
        </replace>

        <replace css:theme-children="#portletFooterE">
            <xsl:for-each css:select=".FooterPortletManager5 .portletWrapper">
                <xi:include href="portlet-rules.xml"/>
            </xsl:for-each>
            <div style="display:hidden"></div>
        </replace>


        <replace css:theme-children="#portletFooterF">
            <xsl:for-each css:select=".FooterPortletManager6 .portletWrapper">
                <xi:include href="portlet-rules.xml"/>
            </xsl:for-each>
            <div style="display:hidden"></div>
        </replace>
        <!--<xi:include href="addon-contentwellportlets.xml"/>-->
        <xi:include href="addon-facetednavigation.xml"/>
        <append css:theme="#site-scripts" css:content="#portal-footer-wrapper > div > script"/>
    </rules>

    <!-- make sure all <label> have class="label" for bootstrap compatibility
         and other tags like <div> and <input> do not use them
    -->
    <xsl:template match="input/@class[contains(., 'label')] | div/@class[contains(., 'label')]">
        <xsl:attribute name="class"><xsl:value-of select="str:replace(., 'label', '')" /></xsl:attribute>
    </xsl:template> 

    <!--
    <xsl:template match="//*[@id='personaltools-login']">
        <xsl:attribute name="class"><xsl:value-of select="." /> link-overlay</xsl:attribute>
    </xsl:template>
    <merge attributes="class" css:theme='*[@id="personaltools-login"]'></merge>-->

</rules>
